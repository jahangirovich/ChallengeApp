<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12 FEB 2016"
        android:id="@+id/date"
        android:fontFamily="@font/qbold"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:selectableItemBackground"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:background="@color/white"
        android:id="@+id/linearForClick"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:id="@+id/leftLine"
            android:background="@color/green"></RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ralewaybold"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="Do it better than others"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/motivation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quick"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="Do it better than others"
                android:textSize="16dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/qbold"
            android:textColor="@color/little_black"
            android:id="@+id/time"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="12:34 PM"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:background="@color/little_gray"></RelativeLayout>
</LinearLayout>